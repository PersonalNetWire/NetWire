<RelativeLayout 
	android:id="@+id/RelativeLayout01" 
	android:layout_width="300dip" 
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	>
	<RelativeLayout 
	android:id="@+id/RelativeLayout02" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:paddingLeft="20dip">
	
	<TextView android:text="Name : " 
		android:id="@+id/ClientName" 
		android:layout_width="100dip" 
		android:layout_height="wrap_content">
	</TextView>
	
	<TextView android:id="@+id/ClientNameValue" 
		android:layout_width="100dip" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="100dip"
		>
	</TextView>
	
	<TextView android:text="IP Address : " 
		android:id="@+id/ClientIP" 
		android:layout_width="100dip" 
		android:layout_height="wrap_content"
		android:layout_marginTop="20dip">
	</TextView>
	
	<TextView android:id="@+id/ClientIPValue" 
		android:layout_width="100dip" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="100dip"
		android:layout_marginTop="20dip"
		>
	</TextView>
	
	<TextView android:text="Port : " 
		android:id="@+id/ClientPort" 
		android:layout_width="100dip" 
		android:layout_height="wrap_content"
		android:layout_marginTop="40dip">
	</TextView>
	
	<TextView android:id="@+id/ClientPortValue" 
		android:layout_width="100dip" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="100dip"
		android:layout_marginTop="40dip"
		>
	</TextView>
	
	<TextView android:text="Status : " 
		android:id="@+id/ClientStatus" 
		android:layout_width="100dip" 
		android:layout_height="wrap_content"
		android:layout_marginTop="60dip">
	</TextView>
	
	<TextView android:id="@+id/ClientStatusValue" 
		android:layout_width="100dip" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="100dip"
		android:layout_marginTop="60dip"
		>
	</TextView>
	
	</RelativeLayout>
	
	<Button android:id="@+id/UserButtonOk" 
	android:layout_width="100dip" 
	android:layout_height="wrap_content"
	android:layout_centerHorizontal="true"
	android:layout_marginTop="90dip"
	android:text="@string/ok">
	</Button>

</RelativeLayout>
